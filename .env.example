# Auth0 Configuration (Optional)
# These credentials are used by the UI to authenticate A2A API calls
# You can also configure these directly in the UI by clicking the "⚙️ Auth" button

AUTH0_DOMAIN=dev-<your-tenant>.us.auth0.com
AUTH0_CLIENT_ID=<your-client-id>
AUTH0_CLIENT_SECRET=<your-client-secret>

# Note: For the web UI, authentication is configured in the browser settings
# This .env file is just for reference when using the Python script:
# uv run get_auth0_token.py --domain $AUTH0_DOMAIN --client-id $AUTH0_CLIENT_ID --client-secret $AUTH0_CLIENT_SECRET --copy

# OpenRouter API Key
# Used for LLM API calls
OPENROUTER_API_KEY=sk-or-v1-<your-api-key>

# Storage Configuration
# Type: "postgres" for PostgreSQL or "memory" for in-memory storage
STORAGE_TYPE=postgres
DATABASE_URL=postgresql+asyncpg://<user>:<password>@<host>:<port>/<database>?ssl=require

# Scheduler Configuration
# Type: "redis" for distributed scheduling or "memory" for single-process
SCHEDULER_TYPE=redis
REDIS_URL=rediss://default:<password>@<host>:<port>

# Sentry Error Tracking (Optional)
# Enable error tracking and performance monitoring
SENTRY_ENABLED=true
SENTRY_DSN=https://<key>@<org-id>.ingest.sentry.io/<project-id>

# OpenTelemetry Configuration (Optional)
# Enable observability and tracing with Langfuse, Arize, or other OTEL platforms
TELEMETRY_ENABLED=true
OLTP_VERBOSE_LOGGING=true
OLTP_ENDPOINT="https://cloud.langfuse.com/api/public/otel/v1/traces"
OLTP_SERVICE_NAME=research_assistant_agent
OLTP_HEADERS={"Authorization":"Basic <base64-encoded-public-key:secret-key>"}
